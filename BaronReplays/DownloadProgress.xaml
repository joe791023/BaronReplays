<Window x:Class="BaronReplays.DownloadProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Downloading}" Height="100" Width="480" Loaded="Window_Loaded" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" Closing="Window_Closing" Icon="Icon.ico">
    <Grid>
        <ProgressBar Value="{Binding Percentage}"/>
        <TextBlock Text="{Binding PercentageString}" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
