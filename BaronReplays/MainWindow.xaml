                        <MenuItem x:Name="Menu_Help_Website" Header="{DynamicResource OpenWebsite}" Click="Menu_Help_Website_Click"/>
                        <MenuItem x:Name="Menu_Help_News" Header="{DynamicResource BackToNews}" Click="Menu_Help_News_Click"/>
