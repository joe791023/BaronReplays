<Window x:Class="BaronReplays.OneLineWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BaronReplays"
        Title="{DynamicResource RenameReplay}" Width="500" Style="{StaticResource PopupWindowStyle}" SizeToContent="Height" WindowStartupLocation="CenterOwner" Loaded="Window_Loaded">

    <StackPanel Orientation="Vertical" Margin="20,15,20,10">
        <TextBox x:Name="OneLineTextBox" Margin="5,0" FontSize="16" BorderBrush="Black"/>
        <Button x:Name="OkayButton" Style="{StaticResource PopupWindowTriButtonStyle}" Content="{DynamicResource Okay}" Width="100" Height="25" Margin="5,10,5,0" HorizontalAlignment="Right" Click="OkayButton_Click"/>
    </StackPanel>
</Window>
