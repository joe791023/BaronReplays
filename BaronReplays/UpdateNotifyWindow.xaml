<Window x:Class="BaronReplays.UpdateNotifyWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:BaronReplays"
        Title="{DynamicResource UpdateNotify}" Style="{StaticResource PopupWindowStyle}" MaxWidth="500" WindowStartupLocation="CenterOwner">

    <StackPanel>
        <TextBlock Text="{DynamicResource AskUpdate}"  Margin="20,10,20,5"  TextWrapping="Wrap" TextAlignment="Center"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,10,10">
            <Button x:Name="Update" Style="{StaticResource PopupWindowTriButtonStyle}" Content="{DynamicResource UpdateNow}" Width="120" Height="30" Margin="10" Click="Update_Click"/>
            <Button x:Name="NotNow" Style="{StaticResource PopupWindowTriButtonStyle}" Content="{DynamicResource NotNow}" Width="120" Height="30" Margin="10" Click="NotNow_Click"/>
            <Button x:Name="DontShowAgain" Style="{StaticResource PopupWindowTriButtonStyle}" Content="{DynamicResource DoNotRemind}" Width="120" Height="30" Margin="10" Click="DontShowAgain_Click"/>
        </StackPanel>
    </StackPanel>
</Window>
